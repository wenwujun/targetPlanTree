/**index.wxss**/
.table {
  border: 0px ;
  width: 100%;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:20%;
    justify-content: center;
    display: flex;
    text-align: center;
    border-right: 0px solid #ddd;
    height: 100%;
}
.td-1 {
    width:19%;
    justify-content: center;
    display: flex;
    text-align: center;
    border-right: 1px solid #ddd;
    height: 50%;
}
.td-2 {
    width:80%;
    justify-content: center;
    border-right: 0px solid #ddd;
    text-align: left;
    height: 50%;
    max-width: 100%;
    padding: 40rpx 0;
    margin-left: 20rpx;
}
.bg-w{
  background: #71C671;

}
.bg-g{
  background: #E6F3F9;
}
.bg-g2{
  background: #fff;
}
.th {
  width: 19%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  border-right: 2px solid #ddd;
}
.th-2 {
  width: 80%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
  max-height:  3rem;
  max-width: 80%;
}.th-text {
  width: 80%;
  justify-content: center;
  color: #000;
  display: block;
  height: 3rem;
  align-items: center;
  max-height:  3rem;
  max-width: 80%;
}